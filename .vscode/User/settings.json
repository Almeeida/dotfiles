{
  /*
   * Editor settings.
   */

  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "editor.detectIndentation": false,
  "editor.fontFamily": "Fira Code",
  "editor.insertSpaces": true,
  "editor.renderLineHighlight": "gutter",
  "editor.renderWhitespace": "none",
  "editor.suggestSelection": "first",
  "editor.tabSize": 2,

  "emmet.includeLanguages": { "javascript": "javascriptreact" },
  "emmet.syntaxProfiles": { "javascript": "jsx" },

  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,

  "files.autoSave": "off",
  "files.trimTrailingWhitespace": true,
  "[markdown]": { "files.trimTrailingWhitespace": false },

  "javascript.updateImportsOnFileMove.enabled": "never",

  "python.linting.pylintEnabled": true,
  "python.linting.enabled": true,

  "terminal.explorerKind": "integrated",
  "terminal.integrated.experimentalUseTitleEvent": true,
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.inheritEnv": false,
  "terminal.integrated.rendererType": "canvas",
  "terminal.integrated.shell.windows": "C:\\WINDOWS\\System32\\cmd.exe",

  "window.zoomLevel": -1,

  "workbench.colorCustomizations": {},
  "workbench.iconTheme": "material-icon-theme",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.colorTheme": "Dracula",

  /*
   * Plugin related
   */

  "discord.detailsEditing": "{filename} | {workspace}",
  "discord.lowerDetailsEditing": "Line: {currentline}/{totallines} | {filesize}",
  "discord.workspaceElapsedTime": true,

  "docthis.includeMemberOfOnClassMembers": false,
  "docthis.includeMemberOfOnInterfaceMembers": false,

  "eslint.alwaysShowStatus": true,
  "eslint.lintTask.enable": true,
  "eslint.packageManager": "yarn",
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],

  "liveshare.codeLens": false,
  "liveshare.connectionMode": "relay",
  "liveshare.featureSet": "insiders",

  "npm-intellisense.importES6": false,
  "npm-intellisense.showBuildInLibs": true,

  "peacock.favoriteColors": [
    { "name": "Angular Red", "value": "#b52e31" },
    { "name": "Auth0 Orange", "value": "#eb5424" },
    { "name": "Azure Blue", "value": "#007fff" },
    { "name": "C# Purple", "value": "#68217A" },
    { "name": "Gatsby Purple", "value": "#639" },
    { "name": "Go Cyan", "value": "#5dc9e2" },
    { "name": "Java Blue-Gray", "value": "#557c9b" },
    { "name": "JavaScript Yellow", "value": "#f9e64f" },
    { "name": "Mandalorian Blue", "value": "#1857a4" },
    { "name": "Node Green", "value": "#215732" },
    { "name": "React Blue", "value": "#00b3e6" },
    { "name": "Something Different", "value": "#832561" },
    { "name": "Vue Green", "value": "#42b883" }
  ]
}
